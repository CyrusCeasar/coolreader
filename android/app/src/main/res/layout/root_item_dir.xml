<?xml version="1.0" encoding="utf-8"?>
<!--
   Recent Book item layout for CR3 root window
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/browser_item_body"
    android:orientation="vertical"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <ImageView android:id="@+id/item_icon"
        android:src="@drawable/cr3_browser_folder_root"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        />
    
    <TextView android:id="@+id/item_name"
        style="@style/TextAppearance.Small"
        tools:text="/mnt/sdcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="start"
        android:gravity="center"
        />

</LinearLayout>
